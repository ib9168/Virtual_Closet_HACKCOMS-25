<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="12.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clothes.ai.LoginController">
  <children>
    <Label text="Please Log In" style="-fx-font-size:18px;" />
    <TextField fx:id="usernameField" promptText="Username" prefWidth="280" />
    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="280" />
    <Button text="Log In" onAction="#handleLogin" prefWidth="160" />
    <Label fx:id="messageLabel" text="" />
    <Button text="Back" onAction="#handleBack" />
  </children>
  <padding>
    <Insets top="20" right="20" bottom="20" left="20" />
  </padding>
</VBox>