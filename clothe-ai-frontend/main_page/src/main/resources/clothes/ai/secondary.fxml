<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clothes.ai.SecondaryController">
    <children>
        <Label text="Your AI Fashion Assistant" style="-fx-font-size: 20px;" />
        <Label fx:id="userLabel" text="Loading..." />
        
        <VBox spacing="10.0" alignment="CENTER" style="-fx-padding: 20px;">
            <Label text="Describe your clothing item:" />
            <TextField fx:id="garmentInput" promptText="e.g., I have a red floral skirt" prefWidth="300" />
            
            <HBox spacing="10.0" alignment="CENTER">
                <Button fx:id="analyzeButton" text="Analyze Item" onAction="#handleAnalyze" />
                <Button fx:id="findIdeasButton" text="Find Outfit Ideas" onAction="#handleFindIdeas" />
            </HBox>
            
            <TextArea fx:id="resultArea" prefRowCount="6" prefWidth="300" wrapText="true" />
        </VBox>
        
        <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
